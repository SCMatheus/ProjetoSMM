
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WebApplication1</title>

    <environment exclude="Development">
        <link href="~/Content/css/side-bar.css" rel="stylesheet">
        <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    </environment>
</head>
<body>
    <div class="pos-f-t">
        <div class="collapse" id="navbarToggleExternalContent">
            <div class="bg-dark p-4">
                <h4 class="text-white">Collapsed content</h4>
                <span class="text-muted">Toggleable via the navbar brand.</span>
            </div>
        </div>

        <div class="d-flex" id="wrapper">

            <!-- Sidebar -->
            <div class="border-right bg-roxo" id="sidebar-wrapper">
                <div class="sidebar-heading text-white titulo-menu">Tipos de Receitas</div>
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item text-white">Bolos e Tortas</a>
                    <a href="#" class="list-group-item text-white">Carnes</a>
                    <a href="#" class="list-group-item text-white">Saladas e Molhos</a>
                    <a href="#" class="list-group-item text-white">Sopas</a>
                    <a href="#" class="list-group-item text-white">Massas</a>
                    <a href="#" class="list-group-item text-white">Lanches</a>
                    <a href="#" class="list-group-item text-white">Todas as Receitas</a>
                </div>
            </div>
            <!-- /#sidebar-wrapper -->
            <!-- Page Content -->
            <div id="page-content-wrapper">

                <navbar class="navbar navbar-expand-lg border-bottom justify-content-around bg-roxo">
                    <button class="btn btn-secondary px-5 btn-menu text-white" id="menu-toggle">Menu</button>

                    <div class="input-group col-md-4">
                        <input class="form-control py-2 border-right-0 border" type="search" placeholder="Digíte o nome de uma receita..." id="nome-receita">
                        <span class="input-group-append">
                            <button class="btn btn-outline-secondary border-left-0 border bg-blue text-white" type="button" id="buscar-receitas">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>

                    <div>
                        <h1 class="navbar-brand">
                            <a href="@Url.Action("Index", "Home")" class="text-white titulo">
                                Cozinha de Vó
                            </a>
                        </h1>
                    </div>
                </navbar>

                <div class="container-fluid">
                    @RenderBody()
                </div>
                <footer class="footer">
                    <p>&copy; 2020 - Cosinha de Vó</p>
                </footer>
            </div>
            <!-- /#page-content-wrapper -->
        </div>
    </div>


    <environment include="Development">
        <script src="~/Content/js/jquery-3.5.1.min.js"></script>
        <script src="~/Content/js/bootstrap.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>
