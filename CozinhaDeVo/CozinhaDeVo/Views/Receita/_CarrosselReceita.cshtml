@using CozinhaDeVo.ViewModel.Receita;

@model ReceitaViewModel



<div id="listaCarrosselDestaques" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#listaCarrosselDestaques" data-slide-to="0" class="active"></li>
        <li data-target="#listaCarrosselDestaques" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="@Model.LinkImagem" alt="@Model.Nome">
        </div>
        <div class="carousel-item">
             <video class="d-block w-100" src="@Model.LinkVideo" alt="@Model.Nome"> </video>
        </div>
    </div>
    <a class="carousel-control-prev" href="#listaCarrosselDestaques" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#listaCarrosselDestaques" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Próximo</span>
    </a>
</div>